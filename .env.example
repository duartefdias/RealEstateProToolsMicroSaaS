# Real Estate Pro Tools - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ================================
# Next.js Configuration
# ================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ================================
# Supabase Configuration
# ================================
# Get these from: https://app.supabase.com/project/[PROJECT_ID]/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ================================
# PostHog Analytics
# ================================
# Get these from: https://app.posthog.com/project/[PROJECT_ID]/settings
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ================================
# Email Service (Resend)
# ================================
# Get this from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key

# ================================
# Payment Processing (Stripe)
# ================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ================================
# Additional Analytics (Optional)
# ================================
# Google Analytics 4
NEXT_PUBLIC_GOOGLE_ANALYTICS=G-XXXXXXXXXX

# Plausible Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=realestateprotools.com

# ================================
# Development Settings
# ================================
# Set to 'development', 'staging', or 'production'
NODE_ENV=development

# ================================
# Security & Authentication
# ================================
# Generate a random string for JWT signing (only needed if using custom auth)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ================================
# Feature Flags & Configuration
# ================================
# Enable/disable features during development
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PAYMENTS=false
NEXT_PUBLIC_ENABLE_CLIENT_MANAGEMENT=false

# ================================
# Rate Limiting & Usage
# ================================
# Daily calculation limits
ANONYMOUS_DAILY_LIMIT=5
REGISTERED_DAILY_LIMIT=10

# ================================
# Portuguese Market Configuration
# ================================
# Default values for Portuguese market calculations
DEFAULT_IMT_RATE=0.008
DEFAULT_STAMP_DUTY_RATE=0.008
DEFAULT_REAL_ESTATE_COMMISSION=0.06